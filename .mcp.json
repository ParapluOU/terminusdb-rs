{
  "mcpServers": {
    "terminusdb": {
      "command": "cargo",
      "args": ["run", "--quiet", "--package", "terminusdb-mcp-server"],
      "env": {
        "RUST_LOG": "info",
        "TERMINUSDB_HOST": "http://localhost:6363",
        "TERMINUSDB_USER": "admin",
        "TERMINUSDB_PASSWORD": "root"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "firefox",
        "--isolated",
        "--ignore-https-errors"
      ]
    }
  }
}
