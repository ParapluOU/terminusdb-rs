# TerminusDB Configuration
TERMINUSDB_ADMIN_PASS=root
TERMINUSDB_SERVER_PORT=6363

# Git Repository Configuration
GIT_REPO_URL=https://github.com/your-org/terminusdb-backups.git
GIT_REPO_USER=your-github-username
GIT_REPO_PASSWORD=your-github-token-or-password
GIT_REPO_EMAIL=backup@example.com

# Backup Configuration
# Comma-separated list of databases in format: org/database
BACKUP_DATABASES=admin/mydb1,admin/mydb2

# Cron schedule for backups (default: 2 AM daily)
# Format: "minute hour day month weekday"
# Examples:
#   "0 2 * * *"    - Every day at 2 AM
#   "0 */6 * * *"  - Every 6 hours
#   "*/30 * * * *" - Every 30 minutes
BACKUP_CRON_SCHEDULE=0 2 * * *

# Git Sync Configuration (optional - all have sensible defaults)
# See: https://github.com/colonelpanic8/git-sync-rs

# Periodic sync interval regardless of file changes (seconds)
GIT_SYNC_INTERVAL=60

# Debounce period after file changes before syncing (seconds)
# Prevents excessive commits when files change rapidly
GIT_SYNC_DEBOUNCE=2

# Minimum time between syncs (seconds) - rate limiting
GIT_SYNC_MIN_INTERVAL=5

# Include untracked files in commits
GIT_SYNC_NEW_FILES=true

# Git remote name
GIT_SYNC_REMOTE=origin

# Custom commit message template
# Available placeholders: {hostname}, {timestamp}
GIT_SYNC_COMMIT_MESSAGE=TerminusDB backup sync from {hostname} at {timestamp}
